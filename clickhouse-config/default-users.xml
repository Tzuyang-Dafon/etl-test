<?xml version="1.0"?>

<clickhouse>
  	<!-- Docs: <https://clickhouse.com/docs/operations/settings/settings_users/> -->
	<users>
		<default>
			<!-- User default is available only locally -->
			<networks>
				<!-- 允許從任何 IP 連線：實際上要注意安全性 -->
				<ip>::/0</ip>
			</networks>
			<profile>default</profile>
			<quota>default</quota>
			<!-- 開啟權限管理（之後可用 SQL 建帳號）-->
			<access_management>1</access_management>
		</default>
	</users>
</clickhouse>