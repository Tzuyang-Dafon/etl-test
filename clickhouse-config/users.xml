<?xml version="1.0"?>
<clickhouse>
	<!-- 使用者設定 -->
	<users>
		<default>
			<!-- 不設定 <password>，就代表沒有密碼 -->
			<networks>
				<!-- 允許從任何 IP 連線：實際上要注意安全性 -->
				<ip>::/0</ip>
			</networks>
			<profile>default</profile>
			<quota>default</quota>
			<!-- 開啟權限管理（之後可用 SQL 建帳號）-->
			<access_management>1</access_management>
		</default>
	</users>

	<!-- 查詢參數設定 Profile -->
	<profiles>
		<default>
			<!-- 這裡先用預設值即可，需要再調整可以再加 -->
		</default>
	</profiles>

	<!-- Quota 限制（0 代表不限）-->
	<quotas>
		<default>
			<interval>
				<duration>3600</duration>
				<queries>0</queries>
				<errors>0</errors>
				<result_rows>0</result_rows>
				<read_rows>0</read_rows>
				<execution_time>0</execution_time>
			</interval>
		</default>
	</quotas>
</clickhouse>
